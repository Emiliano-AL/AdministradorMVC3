@model IEnumerable<adoProject.Models.ciudade>

@{
    ViewBag.Title = "Index";
   WebGrid grid = new WebGrid(Model);
}

<h2>Ciudades</h2>
@grid.GetHtml(tableStyle:"table table-hover", columns: new []{
    grid.Column("nombre", header:"Nombre"),
    grid.Column("Estado", canSort:false, format: t => t.estado.nombre ),
    grid.Column(header:"Acciones", format:@<text>
        @Html.ActionLink("Editar", "Edit", new { id=item.idciudad }) | 
        @Html.ActionLink("Detalle", "Details", new { id=item.idciudad }) |
        @Html.ActionLink("Eliminar", "Delete", new { id=item.idciudad })
    </text>)
})


<p>
    @Html.ActionLink("Agregar ciudad", "Create")
</p>
